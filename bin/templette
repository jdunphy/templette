#!/usr/bin/env ruby
#

usage = <<USAGE
Generate the templette framework.
Usage: templette <directory>
--help gets you this help message
USAGE

require 'fileutils'

new_dir = ARGV.first

if new_dir.nil? || new_dir.empty?
	puts usage
	exit(0)
end

FileUtils.mkdir(new_dir) unless File.exists?(new_dir)
%w{/pages /templates /tasks}.each do |dir|
	FileUtils.mkdir(new_dir + dir) unless File.exists?(new_dir + dir)
end

FileUtils.cp(File.dirname(__FILE__) + '/Rakefile', new_dir + '/Rakefile')
FileUtils.cp(File.dirname(__FILE__) + '/builder.rake', new_dir + '/tasks/builder.rake')
